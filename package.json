{
  "name": "@sap/capire-bookshop",
  "version": "1.0.0",
  "description": "A simple bookshop application, build in a self-contained all-in-one fashion, i.e. w/o reusing other packages.",
  "license": "SAP SAMPLE CODE LICENSE",
  "dependencies": {
    "@sap/cds": "^4",
    "@sap/hana-client": "^2.5.105",
    "express": "^4.17.1",
    "sqlite3": "5.0.0"
  },
  "scripts": {
    "start": "cds run"
  },
  "cds": {
    "hana": {
      "syntax": "hdi"
    },
    "odata": {
      "version": "v4"
    },
    "requires": {
      "db": {
        "kind": "hana"
      }
    },
    "[development]": {
      "requires": {
        "db": {
          "kind": "sql",
          "model": [
            "db",
            "srv"
          ]
        }
      }
    }
  }
}
